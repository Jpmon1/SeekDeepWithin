@model SeekDeepWithin.Models.TagViewModel

@{
    ViewBag.Title = "Create Tag";
}

<h2>New Tag</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Tag Details</legend>
      @if (ViewBag.ErrorMessage != null) {
         <div class="row">
            <div class="small-12 large-12 columns">
               <div class="alert-box alert">@ViewBag.ErrorMessage</div>
            </div>
         </div>
      }

       <div class="row">
          <div class="small-12 large-12 columns">
             @Html.LabelFor(model => model.Name)
             @Html.EditorFor(model => model.Name)
             @Html.ValidationMessageFor(model => model.Name)
          </div>
       </div>

        <input type="submit" value="Create" class="button" /> <a href="@Url.Action("Index")" class="button small secondary">cancel</a>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
