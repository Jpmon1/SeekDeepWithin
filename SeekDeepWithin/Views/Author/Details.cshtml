@using SeekDeepWithin.Controllers
@model SeekDeepWithin.Models.AuthorViewModel

@{
   ViewBag.Title = Model.Name;
}

<div class="row">
   <div class="small-12 large-8 columns">
      <h3>@Model.Name</h3>
      @if (Request.IsAuthenticated && User.IsInRole ("EditBook")) {
         <small>@Html.ActionLink("edit", "Edit", new { id = Model.Id })</small>
      }
      <p>
         @if (!string.IsNullOrEmpty (Model.About)) {
            @Html.Raw(HtmlSanitizer.Sanitize (Model.About))
         } else {
            <em>No information about this writer!</em>
         }
      </p>
   </div>
   <div class="small-12 large-4 columns">
      <h3>Books Written:</h3>
      <ul>
         @foreach (var version in Model.Written) {
            <li>@Html.ActionLink(version.Title, "About", "Version", new { id = version.Id }, null)</li>
         }
      </ul>
   </div>
</div>
