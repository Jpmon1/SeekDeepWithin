@model SeekDeepWithin.Models.AuthorViewModel

@{
    ViewBag.Title = "New Writer";
}

<h3>New Writer</h3>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Writer Details</legend>
       
       <div class="row">
          <div class="small-12 large-6 columns">
             @Html.LabelFor(model => model.Name)
             @Html.EditorFor(model => model.Name)
             @Html.ValidationMessageFor(model => model.Name)
          </div>
       </div>
       
       <div class="row">
          <div class="small-12 large-6 columns">
             @Html.LabelFor(model => model.About)
             @Html.TextAreaFor(model => model.About)
             @Html.ValidationMessageFor(model => model.About)
          </div>
       </div>

        <input type="submit" value="Create" class="button" /> <a href="@TempData["RefUrl"]" class="button secondary small">cancel</a>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
