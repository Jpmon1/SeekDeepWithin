@{ ViewBag.IsIndex = true; }
<input type="hidden" id="loadOnScroll" value="@(ViewBag.LoadOnScroll)"/>
<div class="row column text-center mTopBig">
   <em style="font-size: 24pt;">Seek, and ye shall find...</em>
</div>
<div class="row" id="searchRow">
   <div class="small-8 medium-9 large-10 column" id="mainSearch">
      <input type="search" placeholder="Search" id="searchText" />
   </div>
   <div class="small-4 medium-3 large-2 column" id="mainBtnSearch">
      <a id="btnSearch" class="sdw-button alt expand tiny">Search</a>
   </div>
</div>
<div class="row column text-center mBottom">
   <em>Let your Heart be your guide</em>
</div>
<div id="lightList"></div>
<div id="truthArea"></div>
@if (ViewBag.LoadOnScroll == 0) {
   <div class="row mTop mBottom">
      <div class="small-12 medium-4 medium-offset-4 large-4 large-offset-4 column">
         <a class="sdw-button white expand" id="loadLove">Load More</a>
      </div>
   </div>
}
@section scripts  {
   @(Scripts.Render ("~/bundles/sdw/seek"))
   @if (User.IsInRole ("Editor")) {
      @(Scripts.Render ("~/bundles/sdw/edit"))
   }
}
