@model SeekDeepWithin.Models.ManageModel
<p class="mTopBig">
   Hello <em>@(User.Identity.Name)</em>, use this page to change information about your account.
   <a href="#" onclick="document.getElementById('logoutForm').submit()" title="Log out" style="color: #346789;">Log out here.</a>
</p>
@using (Html.BeginForm ("Manage", "Account")) {
   @(Html.AntiForgeryToken ())
   <span style="font-size: x-large">Change Password</span>
   <div class="row">
      <div class="small-12 large-6 columns">
         @(Html.LabelFor (m => m.OldPassword))
         @(Html.PasswordFor (m => m.OldPassword))
         @(Html.LabelFor (m => m.NewPassword))
         @(Html.PasswordFor (m => m.NewPassword))
         @(Html.LabelFor (m => m.ConfirmPassword))
         @(Html.PasswordFor (m => m.ConfirmPassword))
      </div>
      <div class="small-12 large-6 columns">
         <div class="row">
            <div class="small-2 columns">
               <div class="switch tiny" style="margin: 0;">
                  <input type="checkbox" class="switch-input" id="LoadOnScroll" name="LoadOnScroll" value="@(Model.LoadOnScroll)" />
                  <label class="switch-paddle" for="LoadOnScroll"></label>
               </div>
            </div>
            <div class="small-10 columns">Load more items upon reaching the bottom of the page, otherwise a button will load more items.</div>
         </div>
      </div>
   </div>
   <div class="row">
      <div class="small-12 medium-4 medium-offset-4 large-4 large-offset-4 column end">
         <input type="submit" value="Save changes" class="sdw-button reg" />
      </div>
   </div>
}
<div style="display: none;">
   @using (Html.BeginForm ("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) { @(Html.AntiForgeryToken ()) }
</div>
