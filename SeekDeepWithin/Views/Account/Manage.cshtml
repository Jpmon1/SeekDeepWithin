@model SeekDeepWithin.Models.LocalPasswordModel
<p class="mTopBig">
   Hello <em>@(User.Identity.Name)</em>, use this page to change information about your account.
   <a href="#" onclick="document.getElementById('logoutForm').submit()" title="Log out" style="color: #346789;">Log out here.</a>
</p>
<div class="row">
   <div class="small-12 large-8 columns mTop">
      @(Html.Partial("_ChangePasswordPartial"))
   </div>
   <div class="small-12 large-4 columns">
   </div>
</div>
<div style="display: none;">
   @using (Html.BeginForm ("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) { @(Html.AntiForgeryToken ()) }
</div>
