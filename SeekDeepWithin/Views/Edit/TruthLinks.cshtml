@model Dictionary<string, string>
@if (Model.Count > 0) {
   <div class="row column"><em class="mTop">Link the added truths to:</em></div>
}
@foreach (var kvp in Model) {
   <div class="row">
      <div class="small-2 medium-1 large-1 column">
         <div class="switch tiny" style="margin: 0;">
            <input type="checkbox" class="switch-input truthLink" id="tl@(kvp.Key)" data-h="@(kvp.Key)" />
            <label class="switch-paddle" for="tl@(kvp.Key)"></label>
         </div>
      </div>
      <div class="small-10 medium-11 large-11 column" style="font-size: x-small;">@(kvp.Value)</div>
   </div>
}