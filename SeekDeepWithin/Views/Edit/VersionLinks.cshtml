@model List <SeekDeepWithin.Pocos.Love>
@if (Model.Count > 0) {
   <div class="row column"><em class="mTop">Add the following links:</em></div>
}
@foreach (var love in Model) {
   <div class="row">
      <div class="small-2 medium-1 large-1 column">
         <div class="switch tiny" style="margin: 0;">
            <input type="checkbox" class="switch-input versionLink" id="vl@(love.Id)" data-l="@(love.Id)" />
            <label class="switch-paddle" for="vl@(love.Id)"></label>
         </div>
      </div>
      <div class="small-10 medium-11 large-11 column" style="font-size: x-small;">
         @(love.Peaces.Aggregate (string.Empty, (current, peace) => current + (peace.Light.Text + " | ")).TrimEnd ('|', ' '))
      </div>
   </div>
}
