@model SeekDeepWithin.Models.GlossaryTermViewModel

@{
    ViewBag.Title = "New Glossary Item";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>New Glossary Term</legend>
       
         @if (ViewBag.ErrorMessage != null) {
            <div class="row">
               <div class="small-12 large-12 columns">
                  <div class="alert-box alert">
                     @ViewBag.ErrorMessage <a href="@Url.Action("Index", "Term", new { id = ViewBag.FoundTermId }, Request.Url.Scheme)" style="color: white">here</a>
                  </div>
               </div>
            </div>
         }
         
        <div class="row">
           <div class="small-12 large-6 columns">
              @Html.LabelFor(model => model.Name)
              @Html.EditorFor(model => model.Name)
              @Html.ValidationMessageFor(model => model.Name)
           </div>
         </div>
       
       <div class="row">
          <div class="small-12 medium-4 medium-offset-4 large-4 large-offset-4 columns">
             <input type="submit" value="Create" class="button expand" />
          </div>
       </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
