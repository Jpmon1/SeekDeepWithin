@model SeekDeepWithin.Models.TermItemViewModel
@{
   ViewBag.Title = "Create Item";
   var scheme = Request.Url == null ? string.Empty : Request.Url.Scheme;
}
@section featured {
   <div class="panel">
      <div class="row">
         <div class="small-12 columns">
            <h3>
               <small>new item for</small> @(Model.Term.Name)
               <small style="float: right">
                  <a href="@Url.Action("Index", "Term", new {id=Model.Term.Id}, scheme)" class="sdw-button reg tiny">
                     <i class="icon-pageback"></i> back to term
                  </a>
               </small>
            </h3>
         </div>
      </div>
   </div>
}
@using (Html.BeginForm (null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" })){@(Html.AntiForgeryToken())}
<div class="sdw-panel">
   <div class="title">New Item</div>
   <div class="content">
      <input type="hidden" id="termId" name="termId" value="@(Model.Term.Id)" />
      <div class="row">
         <div class="small-12 columns">
            <label for="sourceList">Source <small style="color: darkred;">(required)</small></label>
            <input type="text" id="sourceList" name="sourceList" />
            <input type="hidden" id="selSourceId" name="selSourceId" />
         </div>
      </div>
      <div class="row">
         <div class="small-12 medium-4 medium-offset-4 large-4 large-offset-4 columns">
            <a href="javascript:void(0)"class="sdw-button add expand" onclick="item_create();">
               <i class="icon-createfile"></i> create
            </a>
         </div>
      </div>
   </div>
</div>
<div class="sdw-panel">
   <div class="title">New Source</div>
   <div class="content">
      <div class="row">
         <div class="small-12 columns">
            <label for="sourceName">Name <small style="color: darkred;">(required)</small></label>
            <input type="text" id="sourceName" name="sourceName" />
         </div>
      </div>
      <div class="row">
         <div class="small-12 columns">
            <label for="sourceUrl">Url</label>
            <input type="text" id="sourceUrl" name="sourceUrl" />
         </div>
      </div>
      <div class="row">
         <div class="small-12 columns">
            <label for="termList">Term</label>
            <input type="text" id="termList" name="termList" />
            <input type="hidden" id="selTermId" name="selTermId" />
         </div>
      </div>
      <div class="row">
         <div class="small-12 medium-4 medium-offset-4 large-4 large-offset-4 columns">
            <a href="javascript:void(0)" class="sdw-button add expand" onclick="item_source_create();">
               <i class="icon-createfile"></i> create
            </a>
         </div>
      </div>
   </div>
</div>
@(Html.Partial("_Modal"))
@section scripts {
   @(Scripts.Render ("~/bundles/sdw.item"))
}
