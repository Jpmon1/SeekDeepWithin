@using SeekDeepWithin.Controllers
@model SeekDeepWithin.Models.ChapterFooterViewModel

@{
   var style = string.Empty;
   if (Model.IsBold) { style += "font-weight:bold;"; }
   if (Model.IsItalic) { style += "font-style:italic;"; }
   if (Model.Type == "footer") { style += "font-size: small;"; }
   var align = "text-center";
   if (Model.Justify == 0) { align = "text-left"; }
   if (Model.Justify == 2) { align = "text-right"; }
}
<div class="row">
   <div class="chapterFooter small-12 large-12 columns @align" style="@style">
      @if (Model.Type == "footer" && Model.Number > 0) {
         <sup>(@Model.Number)</sup>
      }
      @Html.Raw(HtmlSanitizer.Sanitize (Model.Text))
   </div>
</div>
