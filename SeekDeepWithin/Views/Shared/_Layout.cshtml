<!DOCTYPE html>
<!--[if IE 9]><html class="lt-ie10" lang="en" > <![endif]-->
<html class="no-js" lang="en">
   <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <meta name="description" content="Study spiritual text from all of the world." />
      <meta name="author" content="SeekDeepWithin.com" />
      <meta name="copyright" content="SeekDeepWithin Copyright (c) @DateTime.Now.Year" />
      <title>@ViewBag.Title - Seek Deep Within</title>
      <link href="/Images/sdw_16.png" rel="shortcut icon" type="image/x-icon" />
      @RenderSection("styles", false)
      @Styles.Render("~/Content/css")
      @Scripts.Render("~/bundles/modernizr")
   </head>
   <body>

      <div class="contain-to-grid fixed">
         <nav class="top-bar" data-topbar role="navigation">
            <ul class="title-area">
               <li class="name">
                  <h1><a href="@Url.Action("Index", "Home")">Seek Deep Within</a></h1>
               </li>
               <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
               <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
            </ul>

            <section class="top-bar-section">
               <!-- Right Nav Section -->
               <ul class="right">
                  <li><a href="@Url.Action("Index", "Book")"><i class="icon-book"></i> Books</a></li>
                  <li><a href="@Url.Action("Index", "Glossary")"><i class="icon-list"></i> Glossary</a></li>
                  <li><a href="@Url.Action("Index", "Search")"><i class="icon-search"></i> Search</a></li>
                  <li class="has-dropdown">
                     <a href="#"><i class="icon-addtolist"></i> More...</a>
                     <ul class="dropdown">
                        <li><a href="@Url.Action("Index", "Writer")"><i class="icon-user"></i> Writers</a></li>
                        <li><a href="@Url.Action("Index", "Tag")"><i class="icon-tags"></i> Tags</a></li>
                        <li><a href="@Url.Action("About", "Home")"><i class="icon-question-sign"></i> About</a></li>
                        @if (Request.IsAuthenticated) {
                           <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="icon-exit"></i> Log out</a></li>
                        }
                     </ul>
                  </li>
               </ul>

               <!-- Left Nav Section -->
               <ul class="left">
                  @if (Request.IsAuthenticated) {
                     <li><a href="@Url.Action("Manage", "Account")">Welcome @User.Identity.Name!</a></li>
                  } else {
                     var returnUrl = Request.Url != null ? Request.Url.ToString () : string.Empty;
                     <li><a href="@Url.Action("Register", "Account")"><i class="icon-ok-sign"></i> Register</a></li>
                     <li><a href="@Url.Action("Login", "Account", new { returnUrl = returnUrl })"><i class="icon-enter"></i> Log in</a></li>
                  }
               </ul>
            </section>
         </nav>
      </div>
   
      <div class="row" style="margin-top: 10px">
         <div class="small-12 large-12 columns">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
               @RenderBody()
            </section>
         </div>
      </div>

      @if (Request.IsAuthenticated) {
         <!-- LOG OUT FORM-->
         <div style="display: none;">
            @using (Html.BeginForm ("LogOff", "Account", FormMethod.Post, new {id = "logoutForm"})) {
               @Html.AntiForgeryToken()
            }
         </div>
      }
      
      <!-- FOOTER -->
      <hr />
      <div class="row">
         <div class="large-6 columns">
            <p>&copy; @DateTime.Now.Year - Seek Deep Within</p>
         </div>
      </div>

      @Scripts.Render("~/bundles/jquery")
      @RenderSection("scripts", required: false)
      <script>
         $(document).foundation({
            offcanvas: {
               // Sets method in which offcanvas opens.
               // [ move | overlap_single | overlap ]
               open_method: 'overlap_single',
               close_on_click: true
            }
         });
      </script>
   </body>
</html>
