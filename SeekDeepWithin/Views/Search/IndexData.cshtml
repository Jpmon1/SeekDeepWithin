@{
   ViewBag.Title = "Index Maintenance";
}
@section featured {
   <div class="panel">
      <div class="row">
         <div class="small-12 columns">
            <h3>
               <i class="icon-indexmanager mRight"></i> Index Maintenance
            </h3>
         </div>
      </div>
   </div>
}
@using (Html.BeginForm (null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" })){
   @Html.AntiForgeryToken()
}

<div class="row">
   <div class="small-12 medium-6 large-6 columns">
      <div class="sdw-panel">
         <div class="title">Create Index</div>
         <div class="content">
            <div class="row">
               <div class="small-8 columns">
                  <select id="selCreateIndex">
                     <option value="book" selected="selected">Books</option>
                     <option value="passage">Passages</option>
                     <option value="term">Terms</option>
                     <option value="glossary">Glossary</option>
                  </select>
               </div>
               <div class="small-4 columns">
                  <a href="javascript:void(0)" onclick="index_create();" class="sdw-button reg small expand">
                     Create
                  </a>
               </div>
            </div>
            <div class="row">
               <div class="small-12 columns"><span id="totalCount"></span></div>
            </div>
            <div class="row">
               <div class="small-6 columns">
                  <label for="startIndex">Starting Index of Items:</label>
                  <input type="number" id="startIndex" name="startIndex" value="-1" />
               </div>
               <div class="small-6 columns">
                  <label for="lengthIndex">Number of Items to Index:</label>
                  <input type="number" id="lengthIndex" name="lengthIndex" value="-1" />
               </div>
            </div>
         </div>
      </div>
   </div>
   <div class="small-12 medium-6 large-6 columns">
      <div class="sdw-panel">
         <div class="title">Optimize Index</div>
         <div class="content">
            <div class="row">
               <div class="small-8 columns">
                  <select id="selOptIndex">
                     <option value="" selected="selected">All</option>
                     <option value="book">Books</option>
                     <option value="passage">Passages</option>
                     <option value="term">Terms</option>
                     <option value="glossary">Glossary</option>
                  </select>
               </div>
               <div class="small-4 columns">
                  <a href="javascript:void(0)" onclick="index_optimize()" class="sdw-button add small expand">
                     Optimize
                  </a>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
<div class="row">
   <div class="small-12 medium-6 large-6 columns">
      <div class="sdw-panel">
         <div class="title">Delete Index</div>
         <div class="content">
            <div class="row">
               <div class="small-8 columns">
                  <select id="selDelIndex">
                     <option value="" selected="selected">All</option>
                     <option value="book">Books</option>
                     <option value="passage">Passages</option>
                     <option value="term">Terms</option>
                     <option value="glossary">Glossary</option>
                  </select>
               </div>
               <div class="small-4 columns">
                  <a href="javascript:void(0)" onclick="index_delete();" class="sdw-button err small expand">
                     Delete
                  </a>
               </div>
            </div>
         </div>
      </div>
   </div>
   <div class="small-12 medium-6 large-6 columns"></div>
</div>

@(Html.Partial("_Modal"))
@section Scripts {
   @(Scripts.Render("~/bundles/sdw.index"))
}
