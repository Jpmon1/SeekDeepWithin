@model SeekDeepWithin.Models.ChapterViewModel

@using (Ajax.BeginForm(new AjaxOptions {HttpMethod = "POST",Url = "/Chapter/Edit"})) {
   @Html.AntiForgeryToken()
   @Html.ValidationSummary(true)

   @Html.HiddenFor(model => model.Id)
   <div class="row" style="margin-top: 10px;">
      <div class="small-6 large-6 columns">
         @Html.LabelFor(model => model.Order)
         @Html.EditorFor(model => model.Order)
      </div>
      <div class="small-6 large-6 columns">
         <label for="DefaultToParagraph">Default to Paragraph Mode</label>
         @Html.CheckBoxFor(model => model.DefaultToParagraph)<small>(Checked will make the chapter display in paragraphs as opposed to verses)</small>
      </div>
   </div>
   <div class="row">
      <div class="small-12 large-12 columns">
         @Html.LabelFor(model => model.Name)
         @Html.EditorFor(model => model.Name)
      </div>
   </div>
   <div class="row text-center">
      <div class="small-12 large-12 columns">
         <input type="submit" value="Save" class="button tiny" />
      </div>
   </div>
}